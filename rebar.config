{erl_opts, [
    {platform_define, "^(19|2)", rand_only},
    {platform_define, "^(R|1|20)", fun_stacktrace}
]}.

{project_plugins, [rebar3_proper]}.

{xref_checks, [undefined_function_calls,
               locals_not_used,
               deprecated_function_calls]}.

{edoc_opts, [
    {dir, "doc"}, {preprocess, true}, {stylesheet, "style.css"}, {title, "depcache"}, {application, depcache}
]}.

{profiles, [
	{edoc_private, [
		{edoc_opts, [
			{private, true}
		]}
	]},
	{test, [
        {deps, [{proper, "1.3.0"}]}
    ]}
]}.